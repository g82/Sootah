<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamepari.sootah.ResultActivity.ImageFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/image"/>

    <LinearLayout
        android:padding="@dimen/short_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#50000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textScaleX="0.98"
            android:textSize="@dimen/cell_font_primary"
            android:id="@+id/tv_title"
            />

        <TextView
            android:textSize="@dimen/cell_font_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textScaleX="0.98"
            android:textColor="@android:color/white"
            android:id="@+id/tv_address"
            />

    </LinearLayout>


</RelativeLayout>
